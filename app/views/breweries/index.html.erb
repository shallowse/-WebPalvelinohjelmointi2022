<h1>Breweries</h1>

<h2>Active</h2>
<p>Number of active breweries: <%= @active_breweries.count %></p>

<div id="breweries">
  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Year</th>
      </tr>
    </thead>
    <tbody>
      <% @active_breweries.each do |brewery| %>
        <tr>
          <td><%= link_to brewery.name, brewery %></td>
          <td><%= brewery.year %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<h2>Retired</h2>
<p>Number of retired breweries: <%= @retired_breweries.count %>
<div id="breweries">
  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Year</th>
      </tr>
    </thead>
    <tbody>
      <% @retired_breweries.each do |brewery| %>
        <tr>
          <td><%= link_to brewery.name, brewery %></td>
          <td><%= brewery.year %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to("New brewery", new_brewery_path, class: 'btn btn-primary') if current_user %>
<%= link_to "List of beers", beers_path, class: 'btn btn-primary' %>
